	<div class="container">
		<div class="navbar-brand"><%=link_to "Palomitas XYZ", root_path%></div>
		<ul class="nav navbar-nav navbar-right">
			<li><%= link_to "Agregar pelÃ­cula", new_movie_path %></li>
			<li><%= link_to "Salir", root_path %></li>
